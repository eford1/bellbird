<h1>Welcome to Bellbird</h1>

<div id="timeline">
  <div id="new_alarm"><%= link_to 'New alarm', new_alarm_path %></div>

  <% @alarms.each do |alarm| %>
    <div class="alarm_box" id="alarm_<%= alarm.id %>">
      <div class="upvotes_control">
        <%= button_to [alarm, :upvotes] do %>⬆️ <%= alarm.upvotes.size %> <% end %>
      </div>
      <div class="text" id="text_<%= alarm.id %>"><%= alarm.text %><br /></div>
      <div id="timestamp_<%= alarm.id %>"><%=l(alarm.created_at, :format => '%m/%d/%Y %l:%M %P') %></div>
    </div>
 <% end %>
  </div>